{
  "include": ["src", "plugins"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/tmp",
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext"],
    "baseUrl": "./",
    "paths": {
      "pg-nano": ["./src/core/mod.ts"],
      "pg-nano/config": ["./src/config/config.ts"],
      "pg-nano/plugin": ["./src/plugin/plugin.ts"],
      "@pg-nano/plugin-crud": ["./plugins/crud/src/crud.ts"],
      "@pg-nano/plugin-crud/*": ["./plugins/crud/src/*.ts"]
    }
  }
}
